@page
@model MyApp.Namespace.DeleteModel
@{
    ViewData["Title"] = "Delete Room";
}

<h1>Delete Room</h1>

<h3>Are you sure you want to delete this room?</h3>
<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Room.RoomName
        </dd>
        <dt class="col-sm-2">
            Capacity
        </dt>
        <dd class="col-sm-10">
            @Model.Room.Capacity
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Room.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Rooms" class="btn btn-secondary">Cancel</a>
    </form>
</div>
